<ul>
<% @letters.each do |letter| %>
  <li><%= letter %></li>
  <% end %>
</ul>

<form action="/games/score" method="POST">

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>

  <div class="form-group m-3" style="width: 300px; font-size: 13px">
    <label class="label mt-3" for="inputWord">What is the longest word you can find?</label>
    <input type="text" class="form-control" id="inputWord" placeholder="Type a word" name="word">
  </div>

    <button type="submit" class="btn btn-success ml-3 mt-1">Play</button>

</form>

